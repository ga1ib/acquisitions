# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Database Configuration
# For local development with Docker: postgres://neondb_owner:password@neon-local:5432/neondb
# For production: your actual Neon Cloud database URL
DATABASE_URL=postgres://username:password@host:5432/database

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=1h

# Neon Local Configuration (for development with Docker)
# Get these values from your Neon dashboard
NEON_API_KEY=your_neon_api_key_here
NEON_PROJECT_ID=your_neon_project_id_here
PARENT_BRANCH_ID=your_parent_branch_id_here

# Optional Configuration
ENABLE_CORS=true
TRUST_PROXY=false
