# Production Environment Configuration
# This file is used when running with docker-compose.prod.yml

# Server Configuration
PORT=3000
NODE_ENV=production
LOG_LEVEL=info

# Database Configuration - Neon Cloud Database
# Replace with your actual Neon Cloud database URL
DATABASE_URL=postgres://username:password@ep-example-123456.us-east-1.aws.neon.tech/neondb?sslmode=require

# JWT Configuration
# IMPORTANT: Use strong, random secrets in production
JWT_SECRET=production-jwt-secret-change-this-to-strong-random-key
JWT_EXPIRES_IN=1h

# Production specific settings
ENABLE_CORS=false
TRUST_PROXY=true

# Security settings
HELMET_CSP=true
RATE_LIMITING=true